<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daynemare.drifterapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
     >

        <activity android:label="@string/select_style" android:name=".activities.SelectStyleActivity" />

        <activity
            android:name=".activities.TripLogActivity"
            android:theme="@style/AppTheme.NoActionBarTwo" />
        <activity
            android:name=".activities.ProfileSettingsActivity"
            android:theme="@style/AppTheme.NoActionBarTwo" />
        <activity
            android:name=".activities.MapViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBarTwo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activities.RegistrationActivity"
            android:theme="@style/AppTheme.NoActionBarTwo"
            />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>